            var misaforos = from af in aforos
                            where af.TanqueId == tanque.Id
                            select af;
            foreach (var i in misaforos)
            {
                await AforoService.DeleteAforo(i.Id);
            }
            NavigationManager.NavigateTo("/tanquelist");
        }
    }


