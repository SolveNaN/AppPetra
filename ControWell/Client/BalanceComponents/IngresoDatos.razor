                            <option value="@i.Id">@i.NombreTanque</option>
                        }
                    </InputSelect>
                </div>
                <div>
                    <label for="nombre">Pozo⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀</label> @* no borrar el texto invisible*@
